<div class="container py-4">
    <!-- Header -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-2 text-center mb-3 mb-md-0">
                    <% if (business.image) { %>
                        <img src="<%= business.image %>" alt="<%= business.name %>" class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                    <% } else { %>
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                            <i class="fas fa-store fa-3x text-secondary"></i>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-7">
                    <h1 class="h2 mb-1"><%= business.name %></h1>
                    <div class="mb-2">
                        <span class="badge bg-primary text-uppercase me-2"><%= business.type %></span>
                        <span class="text-warning">
                            <% const stars = Math.round(avgRating); %>
                            <% for(let i=0; i<5; i++) { %>
                                <i class="<%= i < stars ? 'fas' : 'far' %> fa-star"></i>
                            <% } %>
                            <span class="text-muted text-dark ms-1">(<%= reviews.length %> reviews)</span>
                        </span>
                    </div>
                    <p class="text-muted mb-0"><%= business.description %></p>
                </div>
                <div class="col-md-3 border-start">
                    <ul class="list-unstyled mb-0 small">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2 text-primary"></i> <%= business.address %></li>
                        <li class="mb-2"><i class="fas fa-phone me-2 text-primary"></i> <%= business.contactPhone %></li>
                        <li class="mb-2"><i class="fas fa-envelope me-2 text-primary"></i> <%= business.contactEmail %></li>
                        <% if(business.hours) { %>
                            <li><i class="fas fa-clock me-2 text-primary"></i> <%= business.hours %></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-9">
            
            <% if (business.type === 'retail' || (products && products.length > 0)) { %>
                <div class="mb-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="h4"><i class="fas fa-box-open me-2 text-secondary"></i>Products</h3>
                    </div>
                    <% if (products.length > 0) { %>
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            <% products.forEach(product => { %>
                                <div class="col">
                                    <div class="card h-100 shadow-sm border-0 product-card">
                                        <div class="position-relative">
                                            <img src="<%= (product.images && product.images.length > 0) ? product.images[0] : 'https://source.unsplash.com/400x300/?product,' + product.category %>" class="card-img-top" alt="<%= product.name %>" style="height: 180px; object-fit: cover;">
                                            <% if(product.stock <= 0) { %>
                                                <span class="position-absolute top-0 end-0 bg-secondary text-white px-2 py-1 m-2 rounded small">Out of Stock</span>
                                            <% } %>
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title text-truncate mb-1"><%= product.name %></h6>
                                            <p class="fw-bold text-primary mb-2">$<%= product.price.toFixed(2) %></p>
                                            <p class="card-text small text-muted text-truncate"><%= product.description %></p>
                                        </div>
                                        <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                                            <% if(user) { %>
                                                <% if(product.stock > 0) { %>
                                                    <form action="/cart/add" method="POST">
                                                        <input type="hidden" name="itemId" value="<%= product._id %>">
                                                        <input type="hidden" name="itemType" value="product">
                                                        <input type="hidden" name="quantity" value="1">
                                                        <button type="submit" class="btn btn-outline-primary w-100 btn-sm fw-bold">Add to Cart</button>
                                                    </form>
                                                <% } else { %>
                                                    <button class="btn btn-secondary w-100 btn-sm" disabled>Unavailable</button>
                                                <% } %>
                                            <% } else { %>
                                                <a href="/users/login" class="btn btn-outline-secondary w-100 btn-sm">Login to Buy</a>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-light text-center">No products available at the moment.</div>
                    <% } %>
                </div>
            <% } %>

            <% if (business.type === 'service' || (services && services.length > 0)) { %>
                <div class="mb-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="h4"><i class="fas fa-tools me-2 text-secondary"></i>Services</h3>
                        <% if(business.type === 'service') { %>
                            <span class="badge bg-light text-dark"><i class="fas fa-users me-1"></i> <%= operatorCount %> Operators Available</span>
                        <% } %>
                    </div>
                    <% if (services.length > 0) { %>
                        <div class="list-group shadow-sm border-0">
                            <% services.forEach(service => { %>
                                <div class="list-group-item p-3 border-start-0 border-end-0">
                                    <div class="d-flex align-items-center">
                                        <!-- Service Image Thumbnail -->
                                        <div class="me-3 flex-shrink-0" style="width: 80px; height: 80px;">
                                            <% if(service.images && service.images.length > 0) { %>
                                                <img src="<%= service.images[0] %>" alt="<%= service.name %>" class="w-100 h-100 rounded" style="object-fit: cover;">
                                            <% } else { %>
                                                <div class="w-100 h-100 rounded bg-light d-flex align-items-center justify-content-center border">
                                                    <i class="fas fa-tools text-secondary opacity-50"></i>
                                                </div>
                                            <% } %>
                                        </div>

                                        <div class="flex-grow-1 d-flex justify-content-between align-items-center">
                                            <div>
                                                <h5 class="mb-1"><%= service.name %></h5>
                                                <p class="mb-1 text-muted small"><%= service.description %></p>
                                                <div class="small">
                                                    <span class="me-3"><i class="fas fa-clock me-1 text-secondary"></i> <%= service.duration %> mins</span>
                                                    <span class="fw-bold text-success">$<%= service.price.toFixed(2) %></span>
                                                </div>
                                            </div>
                                            <div class="ms-3">
                                                <% if(user) { %>
                                                    <a href="/services/<%= service._id %>" class="btn btn-success btn-sm fw-bold px-3">Book</a>
                                                <% } else { %>
                                                    <a href="/users/login" class="btn btn-outline-secondary btn-sm">Login</a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <div class="alert alert-light text-center">No services listed at the moment.</div>
                    <% } %>
                </div>
            <% } %>

            <!-- Reviews -->
            <div class="mb-5">
                <h3 class="h4 mb-3">Reviews</h3>
                <% if(reviews.length > 0) { %>
                    <div class="card shadow-sm border-0">
                        <ul class="list-group list-group-flush">
                            <% reviews.forEach(review => { %>
                                <li class="list-group-item p-3">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h6 class="mb-0 fw-bold"><%= review.user ? review.user.name : 'Anonymous' %></h6>
                                        <div class="text-warning small">
                                            <% for(let i=0; i<5; i++) { %>
                                                <i class="<%= i < review.rating ? 'fas' : 'far' %> fa-star"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <p class="mb-0 small"><%= review.comment %></p>
                                        <% if (user && review.user && user._id.toString() === review.user._id.toString() && review.order) { %>
                                            <a href="/orders/<%= review.order._id %>/review" class="btn btn-link btn-sm p-0 text-decoration-none" style="font-size: 0.75rem;">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                        <% } %>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mt-1">
                                        <small class="text-muted x-small"><%= new Date(review.createdAt).toLocaleDateString() %></small>
                                        <% if (user) { %>
                                            <form action="/reports/submit" method="POST" class="d-inline">
                                                <input type="hidden" name="targetType" value="Review">
                                                <input type="hidden" name="targetId" value="<%= review._id %>">
                                                <button type="submit" class="btn btn-link btn-sm p-0 text-muted text-decoration-none" style="font-size: 0.75rem;" onclick="return confirm('Report this review as inappropriate?')">
                                                    <i class="fas fa-flag"></i> Report
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                    <% if(review.reply) { %>
                                        <div class="bg-light p-2 rounded mt-2 ms-3 border-start border-3 border-primary">
                                            <small class="fw-bold d-block mb-1">Response from Owner:</small>
                                            <p class="mb-0 small text-muted"><%= review.reply %></p>
                                        </div>
                                    <% } %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } else { %>
                    <p class="text-muted">No reviews yet.</p>
                <% } %>
            </div>
        </div>

        <!-- Sidebar (Policies, etc) -->
        <div class="col-lg-3">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white fw-bold">Store Policies</div>
                <div class="card-body small text-muted">
                    <p class="mb-2"><i class="fas fa-shipping-fast me-2"></i> 
                        <% if(business.shippingSettings && business.shippingSettings.freeShippingThreshold > 0) { %>
                            Free shipping on orders over $<%= business.shippingSettings.freeShippingThreshold %>
                        <% } else { %>
                            Standard shipping rates apply
                        <% } %>
                    </p>
                    <p class="mb-0"><i class="fas fa-undo me-2"></i> 30-day return policy</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.product-card:hover {
    transform: translateY(-2px);
    transition: transform 0.2s;
}
.x-small {
    font-size: 0.75rem;
}
</style>
