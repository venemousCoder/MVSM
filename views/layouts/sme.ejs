<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>MVSM - SME Portal | <%= typeof title != 'undefined' ? title : 'Dashboard' %></title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <!-- Bootstrap 5 CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Custom Styles override -->
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Specific overrides for SME layout to work with Bootstrap */
    body {
      display: block; /* Override flex from style.css if needed, but flex row is better for sidebar */
      min-height: 100vh;
      overflow-x: hidden;
    }
    .sme-wrapper {
      display: flex;
      width: 100%;
      min-height: 100vh;
    }
    .sme-sidebar {
      width: 280px;
      min-height: 100vh;
      border-right: 1px solid #dee2e6;
      transition: all 0.3s;
      overflow-y: auto;
    }
    .sme-content {
      flex: 1;
      padding: 20px;
      width: 100%; /* Ensure content takes full width */
      background-color: var(--light-bg, #f8f9fa); /* Use variable or fallback */
    }
    a {
        text-decoration: none;
    }

    /* Mobile Toggle Button */
    .sme-toggle-btn {
      display: none;
      margin-bottom: 20px;
      font-size: 1.5rem;
      cursor: pointer;
      border: none;
      background: none;
      color: var(--primary-color, #2c3e50);
    }

    /* Overlay for mobile sidebar */
    .sme-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 1040;
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
      .sme-sidebar {
        position: fixed;
        top: 0;
        left: -280px;
        height: 100vh;
        z-index: 1050;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
      }
      .sme-sidebar.active {
        left: 0;
      }
      .sme-toggle-btn {
        display: block;
      }
      .sme-overlay.active {
        display: block;
      }
    }
  </style>
</head>
<body>
  
  <div class="sme-wrapper">
    <!-- Overlay -->
    <div class="sme-overlay" id="smeOverlay"></div>

    <!-- Sidebar -->
    <%- include('../partials/sme-sidebar') %>

    <!-- Main Content -->
    <div class="sme-content">
        <button class="sme-toggle-btn" id="smeToggleBtn">
          <i class="fas fa-bars"></i>
        </button>
        <%- include('../partials/flash') %>
        <%- body %>
    </div>
  </div>

  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const sidebar = document.getElementById('smeSidebar');
      const overlay = document.getElementById('smeOverlay');
      const toggleBtn = document.getElementById('smeToggleBtn');

      function toggleSidebar() {
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
      }

      if (toggleBtn) {
        toggleBtn.addEventListener('click', toggleSidebar);
      }

      if (overlay) {
        overlay.addEventListener('click', toggleSidebar);
      }
    });
  </script>
</body>
</html>
