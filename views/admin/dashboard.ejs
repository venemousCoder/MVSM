<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3 shadow-sm">
            <div class="card-header">Users</div>
            <div class="card-body">
                <h5 class="card-title display-6"><%= stats.users %></h5>
                <p class="card-text">Total Registered Consumers</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3 shadow-sm">
            <div class="card-header">Businesses</div>
            <div class="card-body">
                <h5 class="card-title display-6"><%= stats.businesses %></h5>
                <p class="card-text">Total Businesses</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3 shadow-sm">
            <div class="card-header">Orders</div>
            <div class="card-body">
                <h5 class="card-title display-6"><%= stats.orders %></h5>
                <p class="card-text">Total Orders Placed</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3 shadow-sm">
            <div class="card-header">Revenue</div>
            <div class="card-body">
                <h5 class="card-title display-6">$<%= stats.revenue.toLocaleString() %></h5>
                <p class="card-text">Total Platform Volume</p>
            </div>
        </div>
    </div>
</div>

<h3 class="mb-3">Recent Businesses</h3>
<div class="table-responsive bg-white shadow-sm rounded">
    <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Owner</th>
                <th>Status</th>
                <th>Joined</th>
            </tr>
        </thead>
        <tbody>
            <% if (recentBusinesses.length > 0) { %>
                <% recentBusinesses.forEach(b => { %>
                    <tr>
                        <td><%= b.name %></td>
                        <td class="text-capitalize"><%= b.type %></td>
                        <td><%= b.owner ? b.owner.name : 'Unknown' %></td>
                        <td>
                            <span class="badge <%= b.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                <%= b.status %>
                            </span>
                        </td>
                        <td><%= new Date(b.createdAt).toLocaleDateString() %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="5" class="text-center">No businesses found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
