<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/shop/<%= service.business._id %>"><%= service.business.name %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= service.name %></li>
        </ol>
    </nav>

    <div class="row mb-5">
        <!-- Service Visual/Icon (Services might not have images, using placeholder/icon) -->
        <div class="col-md-5 mb-4 mb-md-0">
            <div class="card border-0 shadow-sm h-100 bg-light d-flex align-items-center justify-content-center overflow-hidden">
                <% if(service.images && service.images.length > 0) { %>
                    <img src="<%= service.images[0] %>" alt="<%= service.name %>" class="img-fluid w-100 h-100" style="object-fit: cover; min-height: 300px;">
                <% } else { %>
                    <i class="fas fa-tools fa-10x text-secondary opacity-25 py-5"></i>
                <% } %>
            </div>
        </div>

        <!-- Service Details -->
        <div class="col-md-7">
            <h1 class="display-6 fw-bold mb-2"><%= service.name %></h1>
            
            <div class="mb-3 d-flex align-items-center">
                <div class="text-warning me-2">
                    <% const stars = Math.round(avgRating); %>
                    <% for(let i=0; i<5; i++) { %>
                        <i class="<%= i < stars ? 'fas' : 'far' %> fa-star"></i>
                    <% } %>
                </div>
                <span class="text-muted text-decoration-underline"><%= reviews.length %> reviews</span>
            </div>

            <h2 class="text-success fw-bold mb-3">$<%= service.price.toFixed(2) %> <small class="text-muted fs-5 fw-normal">/ <%= service.duration %> mins</small></h2>
            
            <div class="mb-4">
                <span class="badge bg-info text-dark">Service</span>
                <% if(service.tags && service.tags.length > 0) { %>
                    <% service.tags.forEach(tag => { %>
                        <span class="badge bg-light text-dark border ms-1"><%= tag %></span>
                    <% }) %>
                <% } %>
            </div>

            <p class="lead text-muted fs-6 mb-4"><%= service.description %></p>

            <div class="card bg-light border-0 mb-4">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span><i class="fas fa-users me-2"></i>Choose Your Operator</span>
                    <% if(operators && operators.length > 0) { %>
                        <span class="badge bg-success text-uppercase" style="font-size: 0.7rem;">Filter: Available Now â–¼</span>
                    <% } %>
                </div>
                <div class="card-body p-0">
                    <% if(user) { %>
                        <% if(operators && operators.length > 0) { %>
                            <div class="list-group list-group-flush">
                                <% operators.forEach(op => { %>
                                    <div class="list-group-item p-3 border-start-0 border-end-0">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <div class="d-flex align-items-center" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#opReviewsModal<%= op._id %>">
                                                <div class="bg-white rounded-circle border d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-user text-secondary"></i>
                                                </div>
                                                <h6 class="mb-0 fw-bold text-decoration-underline"><%= op.name %></h6>
                                            </div>
                                            <div class="text-warning small" style="cursor: pointer;" data-bs-toggle="modal" data-bs-target="#opReviewsModal<%= op._id %>">
                                                <% const stars = Math.round(op.rating); %>
                                                <% for(let i=0; i<5; i++) { %>
                                                    <i class="<%= i < stars ? 'fas' : 'far' %> fa-star"></i>
                                                <% } %>
                                                <span class="text-dark fw-bold ms-1"><%= op.rating.toFixed(1) %></span>
                                                <small class="text-muted ms-1">(<%= op.reviews ? op.reviews.length : 0 %>)</small>
                                            </div>
                                        </div>

                                        <!-- Modal was here -->
                                        
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <div class="small text-muted">
                                                <i class="fas fa-list-ol me-1"></i> Queue: <%= op.queueLength %> customers
                                            </div>
                                            <div>
                                                <% if(op.isAvailable || op.queueLength === 0) { %>
                                                    <span class="badge bg-success"><i class="fas fa-check me-1"></i> Available Now</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i> Est. wait: ~<%= op.estWaitTime %> min</span>
                                                <% } %>
                                            </div>
                                        </div>

                                        <form action="/services/<%= service._id %>/chat" method="GET">
                                            <input type="hidden" name="operatorId" value="<%= op._id %>">
                                            <button type="submit" class="btn btn-outline-primary btn-sm w-100 fw-bold mb-2">Select This Operator</button>
                                        </form>
                                        <form action="/reports/submit" method="POST">
                                            <input type="hidden" name="targetType" value="Operator">
                                            <input type="hidden" name="targetId" value="<%= op._id %>">
                                            <button type="submit" class="btn btn-link btn-sm text-danger text-decoration-none w-100 p-0" style="font-size: 0.8rem;" onclick="return confirm('Report this operator?')">
                                                <i class="fas fa-flag"></i> Report Operator
                                            </button>
                                        </form>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="p-3 text-center">
                                <p class="text-muted small mb-3">No specific operators available for selection. We will assign the best available one for you.</p>
                                <form action="/services/<%= service._id %>/chat" method="GET">
                                    <button type="submit" class="btn btn-success w-100 fw-bold">Book (Auto-Assign)</button>
                                </form>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="p-3">
                            <a href="/users/login" class="btn btn-primary w-100">Login to Book</a>
                        </div>
                    <% } %>
                </div>
                <% if (user) { %>
                    <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                        <form action="/reports/submit" method="POST">
                            <input type="hidden" name="targetType" value="Service">
                            <input type="hidden" name="targetId" value="<%= service._id %>">
                            <button type="submit" class="btn btn-sm btn-link text-danger w-100 text-decoration-none" onclick="return confirm('Report this service?')">
                                <i class="fas fa-exclamation-circle me-1"></i> Report Service
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>

            <div class="d-flex align-items-center p-3 border rounded">
                <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-store text-secondary"></i>
                </div>
                <div>
                    <small class="text-muted d-block">Service Provider</small>
                    <a href="/shop/<%= service.business._id %>" class="fw-bold text-decoration-none text-dark"><%= service.business.name %></a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="border-bottom pb-2 mb-4">Customer Reviews</h3>
            <% if(reviews.length > 0) { %>
                <div class="row">
                    <% reviews.forEach(review => { %>
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 shadow-sm border-0">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between mb-2">
                                        <h6 class="fw-bold mb-0"><%= review.user ? review.user.name : 'Anonymous' %></h6>
                                        <div class="text-warning small">
                                            <% for(let i=0; i<5; i++) { %>
                                                <i class="<%= i < review.rating ? 'fas' : 'far' %> fa-star"></i>
                                            <% } %>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                        <p class="text-muted small mb-0"><%= review.comment %></p>
                                        <% if (user && review.user && user._id.toString() === review.user._id.toString() && review.order) { %>
                                            <a href="/orders/<%= review.order._id %>/review" class="btn btn-link btn-sm p-0 text-decoration-none" style="font-size: 0.75rem;">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </a>
                                        <% } %>
                                        <% if (user) { %>
                                            <form action="/reports/submit" method="POST" class="d-inline ms-2">
                                                <input type="hidden" name="targetType" value="Review">
                                                <input type="hidden" name="targetId" value="<%= review._id %>">
                                                <button type="submit" class="btn btn-link btn-sm p-0 text-muted text-decoration-none" style="font-size: 0.75rem;" onclick="return confirm('Report this review as inappropriate?')">
                                                    <i class="fas fa-flag"></i> Report
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                    <% if(review.reply) { %>
                                        <div class="mt-2 ps-3 border-start border-3 border-primary bg-light p-2 rounded">
                                            <small class="fw-bold d-block">Store Response:</small>
                                            <small class="text-muted"><%= review.reply %></small>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="text-muted">No reviews yet for this service.</p>
            <% } %>
        </div>
    </div>

    <!-- Related Services -->
    <% if(relatedServices && relatedServices.length > 0) { %>
        <div class="row">
            <div class="col-12">
                <h3 class="border-bottom pb-2 mb-4">Other Services from <%= service.business.name %></h3>
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% relatedServices.forEach(relService => { %>
                        <div class="col">
                            <div class="card h-100 shadow-sm border-0 service-card">
                                <div class="card-body">
                                    <h6 class="card-title text-truncate"><a href="/services/<%= relService._id %>" class="text-decoration-none text-dark"><%= relService.name %></a></h6>
                                    <p class="text-success fw-bold mb-0">$<%= relService.price.toFixed(2) %></p>
                                    <small class="text-muted"><%= relService.duration %> mins</small>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    <% } %>
</div>

<!-- Operator Reviews Modals (Placed outside to avoid stacking context issues) -->
<% if(operators && operators.length > 0) { %>
    <% operators.forEach(op => { %>
        <div class="modal fade" id="opReviewsModal<%= op._id %>" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Reviews for <%= op.name %></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="text-center mb-3">
                    <h1 class="display-4 fw-bold"><%= op.rating.toFixed(1) %></h1>
                    <div class="text-warning">
                        <% const stars = Math.round(op.rating); %>
                        <% for(let i=0; i<5; i++) { %>
                            <i class="<%= i < stars ? 'fas' : 'far' %> fa-star"></i>
                        <% } %>
                    </div>
                    <small class="text-muted">Based on <%= op.reviews ? op.reviews.length : 0 %> reviews</small>
                </div>
                <hr>
                <% if(op.reviews && op.reviews.length > 0) { %>
                    <% op.reviews.forEach(r => { %>
                        <div class="mb-3 border-bottom pb-2 text-start">
                            <div class="d-flex justify-content-between">
                                <strong><%= r.user ? r.user.name : 'Anonymous' %></strong>
                                <div class="text-warning small">
                                    <% for(let j=0; j<5; j++) { %>
                                        <i class="<%= j < r.rating ? 'fas' : 'far' %> fa-star"></i>
                                    <% } %>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <p class="small text-muted mb-0"><%= r.comment %></p>
                                <% if (user && r.user && user._id.toString() === r.user._id.toString() && r.order) { %>
                                    <a href="/orders/<%= r.order._id %>/review" class="btn btn-link btn-sm p-0 text-decoration-none" style="font-size: 0.75rem;">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                <% } %>
                                <% if (user) { %>
                                    <form action="/reports/submit" method="POST" class="d-inline ms-2">
                                        <input type="hidden" name="targetType" value="Review">
                                        <input type="hidden" name="targetId" value="<%= r._id %>">
                                        <button type="submit" class="btn btn-link btn-sm p-0 text-muted text-decoration-none" style="font-size: 0.75rem;" onclick="return confirm('Report this review as inappropriate?')">
                                            <i class="fas fa-flag"></i> Report
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center text-muted my-3">No reviews yet for this operator.</p>
                <% } %>
              </div>
            </div>
          </div>
        </div>
    <% }) %>
<% } %>

<style>
.service-card:hover {
    transform: translateY(-5px);
    transition: transform 0.2s;
}
</style>
