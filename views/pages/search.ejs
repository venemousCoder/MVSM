<div class="container py-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="h3 mb-0">Search Results for "<span class="text-primary"><%= query || 'All' %></span>"</h1>
        </div>
        <div class="col-md-4 mt-3 mt-md-0">
             <form action="/search" method="GET" class="d-flex">
                <input class="form-control me-2" type="search" name="q" value="<%= query %>" placeholder="Search...">
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Filters -->
        <div class="col-lg-3 mb-4">
            <button class="btn btn-outline-primary d-lg-none w-100 mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="false" aria-controls="filterCollapse">
                <i class="fas fa-filter me-2"></i> Toggle Filters
            </button>
            <div class="collapse d-lg-block" id="filterCollapse">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white fw-bold">
                        <i class="fas fa-filter me-2"></i> Filters
                    </div>
                    <div class="card-body">
                        <form action="/search" method="GET">
                            <input type="hidden" name="q" value="<%= query %>">
                            
                            <!-- Type Filter -->
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase">Result Type</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="typeAll" value="all" <%= filters.type === 'all' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="typeAll">All</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="typeProduct" value="product" <%= filters.type === 'product' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="typeProduct">Products Only</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="type" id="typeService" value="service" <%= filters.type === 'service' ? 'checked' : '' %>>
                                    <label class="form-check-label" for="typeService">Services Only</label>
                                </div>
                            </div>

                            <!-- Price Range -->
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase">Price Range ($)</label>
                                <div class="d-flex gap-2">
                                    <input type="number" class="form-control form-control-sm" name="minPrice" placeholder="Min" value="<%= filters.minPrice %>">
                                    <span class="align-self-center">-</span>
                                    <input type="number" class="form-control form-control-sm" name="maxPrice" placeholder="Max" value="<%= filters.maxPrice %>">
                                </div>
                            </div>

                            <!-- Rating Filter -->
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase">Minimum Rating</label>
                                <select class="form-select form-select-sm" name="minRating">
                                    <option value="">Any Rating</option>
                                    <option value="4" <%= filters.minRating == 4 ? 'selected' : '' %>>4 Stars & Up</option>
                                    <option value="3" <%= filters.minRating == 3 ? 'selected' : '' %>>3 Stars & Up</option>
                                    <option value="2" <%= filters.minRating == 2 ? 'selected' : '' %>>2 Stars & Up</option>
                                </select>
                            </div>

                            <!-- Location -->
                            <div class="mb-4">
                                <label class="form-label fw-bold small text-uppercase">Location</label>
                                <input type="text" class="form-control form-control-sm" name="location" placeholder="City or Address" value="<%= filters.location %>">
                                <div class="form-text x-small">Matches business address</div>
                            </div>

                            <!-- Availability -->
                            <div class="mb-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="availability" name="availability" value="1" <%= filters.availability ? 'checked' : '' %>>
                                    <label class="form-check-label fw-bold small text-uppercase" for="availability">Available Now</label>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-sm">Apply Filters</button>
                                <a href="/search?q=<%= query %>" class="btn btn-outline-secondary btn-sm">Reset</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Area -->
        <div class="col-lg-9">
            <% if (products.length === 0 && serviceBusinesses.length === 0) { %>
                <div class="alert alert-info text-center py-5 rounded-3 border-0 shadow-sm">
                    <i class="fas fa-search fa-3x mb-3 text-secondary"></i>
                    <h4>No results found</h4>
                    <p class="text-muted">Try adjusting your filters or search terms.</p>
                </div>
            <% } %>

            <!-- PRODUCT RESULTS -->
            <% if (products.length > 0) { %>
                <div class="mb-5">
                    <h4 class="mb-3 border-bottom pb-2 text-secondary"><i class="fas fa-box-open me-2"></i>Product Results</h4>
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% products.forEach(product => { %>
                            <div class="col">
                                <div class="card h-100 shadow-sm border-0 product-card">
                                    <div class="position-relative">
                                        <img src="<%= (product.images && product.images.length > 0) ? product.images[0] : 'https://source.unsplash.com/400x300/?product,' + product.category %>" class="card-img-top" alt="<%= product.name %>" style="height: 180px; object-fit: cover;">
                                        <% if(product.stock <= 0) { %>
                                            <span class="position-absolute top-0 end-0 bg-secondary text-white px-2 py-1 m-2 rounded small">Out of Stock</span>
                                        <% } %>
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-title text-truncate mb-1" title="<%= product.name %>"><%= product.name %></h6>
                                        <div class="mb-2">
                                            <span class="fw-bold text-primary">$<%= product.price.toFixed(2) %></span>
                                        </div>
                                        <div class="small text-warning mb-2">
                                            <% 
                                                const rating = product.rating || 0;
                                                const stars = Math.round(rating);
                                                for(let i=0; i<5; i++) {
                                                    if(i < stars) { %> <i class="fas fa-star"></i> <% } 
                                                    else { %> <i class="far fa-star"></i> <% }
                                                }
                                            %>
                                            <span class="text-muted ms-1">(<%= product.reviewCount || 0 %>)</span>
                                        </div>
                                        
                                        <% if(product.business) { %>
                                            <p class="card-text x-small text-muted mb-0"><i class="fas fa-store me-1"></i> <%= product.business.name %></p>
                                        <% } %>
                                    </div>
                                    <div class="card-footer bg-white border-top-0 pt-0 pb-3">
                                        <% if(user) { %>
                                            <% if(product.stock > 0) { %>
                                                <form action="/cart/add" method="POST">
                                                    <input type="hidden" name="itemId" value="<%= product._id %>">
                                                    <input type="hidden" name="itemType" value="product">
                                                    <input type="hidden" name="quantity" value="1">
                                                    <button type="submit" class="btn btn-outline-primary w-100 btn-sm fw-bold">Add to Cart</button>
                                                </form>
                                            <% } else { %>
                                                <button class="btn btn-secondary w-100 btn-sm" disabled>Unavailable</button>
                                            <% } %>
                                        <% } else { %>
                                            <a href="/users/login" class="btn btn-outline-secondary w-100 btn-sm">Login</a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } %>

            <!-- SERVICE RESULTS -->
            <% if (serviceBusinesses.length > 0) { %>
                <div class="mb-5">
                    <h4 class="mb-3 border-bottom pb-2 text-secondary"><i class="fas fa-tools me-2"></i>Service Businesses</h4>
                    <div class="row row-cols-1 g-3">
                        <% serviceBusinesses.forEach(business => { %>
                            <div class="col">
                                <div class="card shadow-sm border-0">
                                    <div class="card-body">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <% if (business.image) { %>
                                                    <img src="<%= business.image %>" alt="<%= business.name %>" class="rounded-circle" style="width: 60px; height: 60px; object-fit: cover;">
                                                <% } else { %>
                                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center text-secondary" style="width: 60px; height: 60px;">
                                                        <i class="fas fa-store fa-lg"></i>
                                                    </div>
                                                <% } %>
                                            </div>
                                            <div class="col">
                                                <div class="d-flex justify-content-between">
                                                    <h5 class="card-title mb-1"><%= business.name %></h5>
                                                    <div class="text-warning small">
                                                        <i class="fas fa-star"></i> <%= (business.rating || 0).toFixed(1) %>
                                                    </div>
                                                </div>
                                                <p class="text-muted small mb-1"><%= business.serviceList || 'General Services' %></p>
                                                <div class="d-flex gap-3 text-muted x-small">
                                                    <span><i class="fas fa-users me-1"></i> <%= business.operatorCount %> ops</span>
                                                    <span><i class="fas fa-clock me-1"></i> ~<%= business.waitTime %>m wait</span>
                                                    <% if(business.address) { %>
                                                        <span class="text-truncate" style="max-width: 150px;"><i class="fas fa-map-marker-alt me-1"></i> <%= business.address %></span>
                                                    <% } %>
                                                </div>
                                            </div>
                                <div class="mt-auto">
                                    <a href="/shop/<%= business._id %>" class="btn btn-success btn-sm w-100 fw-bold">Book Service</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<style>
.x-small {
    font-size: 0.8rem;
}
.product-card:hover {
    transform: translateY(-2px);
    transition: transform 0.2s;
}
</style>