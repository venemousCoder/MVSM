<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg border-0 rounded-lg">
      <div class="card-header bg-primary text-white text-center py-4">
        <h3 class="font-weight-light my-2"><i class="fas fa-key me-2"></i>Password Recovery</h3>
      </div>
      <div class="card-body p-5">
        <div class="small mb-3 text-muted">Enter your email address and we will send you a link to reset your password.</div>
        <form action="/users/forgot-password" method="POST">
          <div class="form-floating mb-3">
            <input class="form-control" id="email" type="email" name="email" placeholder="name@example.com" required />
            <label for="email">Email address</label>
          </div>
          <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
            <a class="small text-decoration-none" href="/users/login">Return to login</a>
            <button type="submit" class="btn btn-primary fw-bold">Reset Password</button>
          </div>
        </form>
      </div>
      <div class="card-footer text-center py-3 bg-light">
        <div class="small"><a href="/users/signup" class="text-decoration-none">Need an account? Sign up!</a></div>
      </div>
    </div>
  </div>
</div>