<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg border-0 rounded-lg">
      <div class="card-header bg-primary text-white text-center py-4">
        <h3 class="font-weight-light my-2"><i class="fas fa-lock me-2"></i>Reset Password</h3>
      </div>
      <div class="card-body p-5">
        <form action="/users/reset/<%= token %>" method="POST">
          <div class="form-floating mb-3">
            <input class="form-control" id="password" type="password" name="password" placeholder="New Password" required />
            <label for="password">New Password</label>
          </div>
          <div class="form-floating mb-3">
            <input class="form-control" id="confirm" type="password" name="confirm" placeholder="Confirm Password" required />
            <label for="confirm">Confirm Password</label>
          </div>
          <div class="d-grid mt-4 mb-0">
            <button type="submit" class="btn btn-primary fw-bold">Update Password</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
