<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Edit Operator</h1>
</div>

<form action="/sme/business/<%= business._id %>/operators/<%= operator._id %>/edit" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" value="<%= operator.user.name %>" disabled>
        <div class="form-text">User details cannot be edited here.</div>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" value="<%= operator.user.email %>" disabled>
    </div>
    <div class="mb-3">
        <label for="role" class="form-label">Role</label>
        <select class="form-select" id="role" name="role">
            <option value="staff" <%= operator.role === 'staff' ? 'selected' : '' %>>Staff</option>
            <option value="manager" <%= operator.role === 'manager' ? 'selected' : '' %>>Manager</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Assign Services</label>
        <% if (services && services.length > 0) { %>
            <div class="card card-body">
                <% services.forEach(function(service) { %>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="services" value="<%= service._id %>" id="service_<%= service._id %>" 
                        <%= operator.services && operator.services.some(s => s.toString() === service._id.toString()) ? 'checked' : '' %>>
                        <label class="form-check-label" for="service_<%= service._id %>">
                            <%= service.name %>
                        </label>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-muted">No services available.</p>
        <% } %>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="status" name="status" value="active" <%= operator.status === 'active' ? 'checked' : '' %>>
        <label class="form-check-label" for="status">Active</label>
    </div>

    <button type="submit" class="btn btn-primary">Update Operator</button>
    <a href="/sme/business/<%= business._id %>/operators" class="btn btn-secondary">Cancel</a>
</form>
