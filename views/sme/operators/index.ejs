<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Operators</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a href="/sme/business/<%= business._id %>/operators/add" class="btn btn-sm btn-outline-primary">
            Add Operator
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Services</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% if (operators.length > 0) { %>
                <% operators.forEach(function(op) { %>
                    <tr>
                        <td><%= op.user ? op.user.name : 'Unknown' %></td>
                        <td><%= op.user ? op.user.email : 'Unknown' %></td>
                        <td><%= op.role.charAt(0).toUpperCase() + op.role.slice(1) %></td>
                        <td>
                            <% if (op.services && op.services.length > 0) { %>
                                <% op.services.forEach(function(service) { %>
                                    <span class="badge bg-info text-dark"><%= service.name %></span>
                                <% }); %>
                            <% } else { %>
                                <span class="text-muted">None</span>
                            <% } %>
                        </td>
                        <td>
                            <% if (op.status === 'active') { %>
                                <span class="badge bg-success">Active</span>
                            <% } else { %>
                                <span class="badge bg-secondary">Inactive</span>
                            <% } %>
                        </td>
                                <td>
                                    <div class="d-flex">
                                        <form action="/sme/business/<%= business._id %>/operators/<%= op._id %>/chat" method="POST" class="mr-1">
                                            <button type="submit" class="btn btn-sm btn-info" title="Chat with Operator">
                                                <i class="fas fa-comment"></i>
                                            </button>
                                        </form>
                                        <a href="/sme/business/<%= business._id %>/operators/<%= op._id %>/edit" class="btn btn-sm btn-primary mr-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/sme/business/<%= business._id %>/operators/<%= op._id %>/delete" method="POST" onsubmit="return confirm('Are you sure?');">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center">No operators found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
